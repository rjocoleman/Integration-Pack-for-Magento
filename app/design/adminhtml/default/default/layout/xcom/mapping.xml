            <action method="addJs"><file>xcom/adminhtml/jquery-1.7.2.js</file></action>
            <action method="addJs"><file>xcom/adminhtml/jquery.ui.position.js</file></action>
            <action method="addJs"><file>xcom/adminhtml/jquery.ui.core.js</file></action>
